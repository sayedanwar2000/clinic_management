<odoo>

    <!-- ====================================== -->
    <!--         Action Clinic Patient          -->
    <!-- ====================================== -->
    <record id="action_clinic_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">clinic.patient</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first patient record.
            </p>
        </field>
    </record>

    <!-- ================================= -->
    <!--        Action Appointment         -->
    <!-- ================================= -->

    <record id="action_dental_appointment_list" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">dental.appointment</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No appointments yet. Start creating one.
            </p>
        </field>
    </record>

    <!-- ================================================ -->
    <!--           Action Medical Treatment Plan          -->
    <!-- ================================================ -->
    <record id="action_medical_treatment_plan" model="ir.actions.act_window">
        <field name="name">Treatment Plans</field>
        <field name="res_model">medical.treatment.plan</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new treatment plan for a patient.
            </p>
        </field>
    </record>

    <!-- ======================================== -->
    <!--          Action Treatment Step           -->
    <!-- ======================================== -->
    <record id="action_treatment_step" model="ir.actions.act_window">
        <field name="name">Treatment Steps</field>
        <field name="res_model">treatment.step</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define and track the steps for each patient's treatment plan.
            </p>
        </field>
    </record>


    <!-- ======================================== -->
    <!--          Action  Dental Case             -->
    <!-- ======================================== -->
    <record id="action_dental_case" model="ir.actions.act_window">
        <field name="name">Dental Case</field>
        <field name="res_model">dental.case</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define and track the dental case for each patient.
            </p>
        </field>
    </record>


    <!-- ==================================================== -->
    <!--          Action Smart Button Dental Case             -->
    <!-- ==================================================== -->
    <record id="action_dental_case_tree_view" model="ir.actions.act_window">
        <field name="name">Dental Cases</field>
        <field name="res_model">dental.case</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('appointment_id', '=', active_id)]</field>
    </record>


    <!-- ==================================================== -->
    <!--          Action Smart Button Dental Diagnosis        -->
    <!-- ==================================================== -->
    <record id="action_open_diagnosis_tree_view" model="ir.actions.act_window">
        <field name="name">Diagnoses</field>
        <field name="res_model">dental.diagnosis</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('case_id', '=', active_id)]</field>
    </record>

    <!-- ==================================================== -->
    <!--          Action Smart Button Dental Prescription        -->
    <!-- ==================================================== -->
    <record id="action_create_prescription_view" model="ir.actions.act_window">
        <field name="name">Prescription</field>
        <field name="res_model">dental.prescription</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('case_id', '=', active_id)]</field>
    </record>

    <!-- ==================================================== -->
    <!--          Action Smart Button Dental Treatment         -->
    <!-- ==================================================== -->
    <record id="action_create_treatment_view" model="ir.actions.act_window">
        <field name="name">Treatment</field>
        <field name="res_model">dental.treatment</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('case_id', '=', active_id)]</field>
    </record>
</odoo>