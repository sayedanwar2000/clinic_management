<odoo>
    <!-- ======================== -->
    <!--     Form View: Patient   -->
    <!-- ======================== -->
    <record id="view_clinic_patient_form" model="ir.ui.view">
        <field name="name">clinic.patient.form</field>
        <field name="model">clinic.patient</field>
        <field name="arch" type="xml">
            <form string="Patient" class="o_form_full_width">
                <sheet>
                    <group>
                        <group string="Basic Information">
                            <field name="name"/>
                            <field name="gender"/>
                            <field name="birth_date"/>
                            <field name="age" readonly="1"/>
                        </group>
                        <group string="Image">
                            <field name="image_1920" widget="image" class="oe_avatar"/>
                        </group>
                        <group string="Contact">
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                    </group>

                    <group>
                        <group string="Medical Info">
                            <field name="blood_type"/>
                            <field name="allergies"/>
                            <field name="medical_history"/>
                            <field name="current_conditions"/>
                        </group>
                        <group string="Insurance">
                            <field name="insurance_company_id"/>
                            <field name="insurance_number"/>
                        </group>
                        <group  string="Activation">
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <!-- Add pages only when corresponding fields are ready -->
                        <page string="Prescriptions">
                             <!-- <field name="prescription_ids"/> -->
                        </page>
                        <page string="Appointments">
                             <!-- <field name="appointment_ids"/> -->
                        </page>
                        <page string="Treatment Plans">
                            <field name="treatment_plan_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ======================== -->
    <!--     List View: Patient   -->
    <!-- ======================== -->
    <record id="view_clinic_patient_list" model="ir.ui.view">
        <field name="name">clinic.patient.list</field>
        <field name="model">clinic.patient</field>
        <field name="arch" type="xml">
            <list string="Patients">
                <field name="name"/>
                <field name="gender"/>
                <field name="blood_type"/>
                <field name="age"/>
                <field name="phone"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- ======================== -->
    <!--         Action           -->
    <!-- ======================== -->
    <record id="action_clinic_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">clinic.patient</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first patient record.
            </p>
        </field>
    </record>

    <!-- ======================== -->
    <!--        Menu Item         -->
    <!-- ======================== -->
    <menuitem
        id="menu_patients"
        name="Patients"
        parent="menu_medical_root"
        action="action_clinic_patient"
        sequence="10"/>
</odoo>
