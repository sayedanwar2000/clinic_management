<odoo>
    <record id="view_dental_invoice_wizard_form" model="ir.ui.view">
        <field name="name">dental.invoice.wizard.form</field>
        <field name="model">dental.invoice.wizard</field>
        <field name="arch" type="xml">
            <form string="Dental Case Invoices">
                <group>
                    <field name="case_id" readonly="1"/>
                </group>

                <field name="invoice_ids">
                    <list string="Invoices">
                        <field name="name"/>
                        <field name="invoice_date"/>
                        <field name="amount_total" widget="monetary"/>
                        <field name="state"/>
                        <button name="open_invoice_form"
                                type="object"
                                string="Open"
                                icon="fa-external-link"/>
                    </list>
                </field>

                <footer>
                    <button string="Close" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_dental_invoice_wizard" model="ir.actions.act_window">
        <field name="name">Invoices</field>
        <field name="res_model">dental.invoice.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
