<!-- views/prescription_wizard_view.xml -->
<odoo>
  <record id="view_prescription_wizard_form" model="ir.ui.view">
    <field name="name">prescription.wizard.form</field>
    <field name="model">prescription.wizard</field>
    <field name="arch" type="xml">
      <form string="Create Prescription" create="false" edit="false">
        <group>
          <field name="patient_id"/>
          <field name="dentist_id"/>
          <field name="date"/>
          <field name="dental_case"/>
        </group>
        <notebook>
          <page string="Medicines">
            <field name="line_ids">
              <tree editable="bottom">
                <field name="medicine"/>
                <field name="medicine_type"/>
                <field name="dose"/>
                <field name="frequency"/>
                <field name="duration"/>
                <field name="notes"/>
              </tree>
            </field>
          </page>
        </notebook>
        <footer>
          <button name="action_create_prescription" type="object" string="Create" class="btn-primary"/>
          <button string="Close Window" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
